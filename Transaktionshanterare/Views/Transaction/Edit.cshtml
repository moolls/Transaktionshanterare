@model Transaction

@{
    ViewData["Title"] = "Edit";
}

<h1>Redigera transaktion</h1>

<hr />
<h4>Kategorisera enskild transaktion</h4>

<div class="row">
    <div class="col-md-4">
        <form asp-action="AddCategoryToTransaction" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="CategoryID" class="control-label">Kategori</label>
                <select asp-for="CategoryID" asp-items="ViewBag.Categories" class="form-control"></select>
                <span asp-validation-for="CategoryID" class="text-danger"></span>
            </div>
<br>
             <input type="hidden" asp-for="TransactionID" />
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Spara</button>
            </div>
  </form>
  <br>
  <hr />
<br>
        <h4>Kategorisera alla transaktioner med samma referens</h4>
        <form asp-action="AddCategoryToTransactionsByReference" method="post">
            <div class="form-group">
                <label asp-for="CategoryID" class="control-label">Kategori</label>
                <select asp-for="CategoryID" asp-items="ViewBag.Categories" class="form-control"></select>
                <span asp-validation-for="CategoryID" class="text-danger"></span>
            </div>
            <br>
            <input type="hidden" asp-for="Reference" />
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Spara alla</button>
            </div>
        </form>

            <div class="form-group">
                 <label asp-for="TransactionID" class="control-label"></label>
                <div>@Html.DisplayFor(model => model.TransactionID)</div>
            </div>
          
            <div class="form-group">
                <label asp-for="BookingDate" class="control-label"></label>
                <div>@Html.DisplayFor(model => model.BookingDate)</div>
            </div>
            <div class="form-group">
                <label asp-for="TransactionDate" class="control-label"></label>
                <div>@Html.DisplayFor(model => model.TransactionDate)</div>
            </div>
            <div class="form-group">
                <label asp-for="Reference" class="control-label"></label>
                <div>@Html.DisplayFor(model => model.Reference)</div>
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <div>@Html.DisplayFor(model => model.Amount)</div>
            </div>
            <div class="form-group">
                <label asp-for="Balance" class="control-label"></label>
                <div>@Html.DisplayFor(model => model.Balance)</div>
            </div>

    </div>
</div>

<div>
</div>
